<div class="dashboard-wrapper">
	<div class="main-container">
		<div class="row page-title">
			<h2>User Access
				<small>
					<li><a href="/">Home</a></li>
					<li>/</li>
					<li><a href="">IT</a></li>
					<li>/</li>
					<li>User Access</li>
				</small>
			</h2>
			<ul class="stats hidden-xs">
				<li>
					<div class="details" style="height: 30px;">
						<!-- Start - Loading animation -->
						<div class="hidden loading-spinner" id="tbl_users" style="margin-top: 0;">
							<div class="rect1"></div>
							<div class="rect2"></div>
							<div class="rect3"></div>
							<div class="rect4"></div>
							<div class="rect5"></div>
						</div>
						<!-- End - Loading animation -->
					</div>
				</li>
			</ul>
		</div>
		<div class="clearfix"></div>
		<div class="row">
			<div class="col-md-12">
				<div class="table-responsive" id="dt_example">
					<table class="table table-striped" id="tbl_active_directory" style="width: 100% !important;">
						<thead>
							<tr>
								<th>Username</th>
								<th>Name</th>
								<th>E-mail</th>
							</tr>
						</thead>
						<tbody>
							<% if @users.any? %>
								<% @users.each do |t| %>
								<tr>
									<td><%= link_to(t.sAMAccountName.first, :controller => 'useraccess', :action => 'show', :username => t.sAMAccountName.first) %></td>
									<td><%= t.cn.first.force_encoding("UTF-8") %></td>
									<td><%= t.mail.first.force_encoding("UTF-8") %></td>
								</tr>
								<% end %>
							<% else %>
							<tr class="danger">
								<td colspan="3">No data available.</td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
