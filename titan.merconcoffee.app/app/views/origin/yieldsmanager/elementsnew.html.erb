<div class="dashboard-wrapper">
	<div class="main-container">
	    <div class="row page-title">
	      	<h2><%= t('yield_manager') %>
		        <small>
			        <ul class="breadcrumb" style="margin-bottom: 5px;">
					    <li><a href="/">Home</a></li>
					    <li><%= t('origin') %></li>
					    <li><a href="/origin/yieldsmanager"><%= t('yield_manager') %></a></li>
					    <li><a href="/origin/yieldsmanager/standardyields"><%= t('standard_yields') %></a></li>
					    <li class="active"><%= t('groups') %></li>
					</ul>
				</small>
	     	</h2>
	     	<ul class="stats hidden-xs">
		        <li>
		          <div class="details" style="height: 30px;">
		            <!-- Start - Loading animation -->
		            <div class="hidden loading-spinner" style="margin-top: 0;">
		              <div class="rect1"></div>
		              <div class="rect2"></div>
		              <div class="rect3"></div>
		              <div class="rect4"></div>
		              <div class="rect5"></div>
		            </div>
		            <!-- End - Loading animation -->
		          </div>
		        </li>
	      	</ul>
	    </div>

	    <div class="clearfix"></div>
    	<div class="row">
    		<div class="col-md-6">
    			<form class="form-horizontal">
				    <fieldset>
				        <legend>New Element</legend>
				        <div class="form-group">
				            <label for="cbPhysicalState" class="col-lg-2 control-label">Type</label>
				            <div class="col-lg-10">
				            	<%=
							      select_tag(
							        :cbElementType_new,
							        options_from_collection_for_select(
					                    YlRefElementTypes.where("et_status = ?", 1).order(et_status: :asc),
					                    "ET_Id",
					                    "ET_Element"
					                  ),
					                  {
					                    :class => "form-control remove-border"
					                  }
							      )
							    %>
				            </div>
				        </div>

				        <div class="form-group">
				            <label for="cbPhysicalState" class="col-lg-2 control-label">Element</label>
				            <div class="col-lg-10" id="inputElement_container">
				                <input type="text" class="form-control remove-border" id="inputElementDesc_new" name="description" placeholder="Element Description" required="true">
				            </div>

				            <div class="col-lg-10 hidden" id="cbCommodity_container">
				            	<%=
							      select_tag(
							        :cbCommodity_new,
							        options_from_collection_for_select(
					                    RefCommodity.where("status_ind = ?", 1).order(cmdty_cd: :asc),
					                    "cmdty_cd",
					                    "cmdty_name"
					                  ),
					                  {
					                    :class => "form-control remove-border"
					                  }
							      )
							    %>
				            </div>
				        </div>

				        <div class="form-group">
				            <label for="cbPhysicalState" class="col-lg-2 control-label">Group</label>
				            <div class="col-lg-10">
				            	<%=
							      select_tag(
							        :cbGroup_new,
							        options_from_collection_for_select(
					                    YlYieldGroups.where("yg_status = ?", 1).order(yg_status: :asc),
					                    "YG_Id",
					                    "YG_Description"
					                  ),
					                  {
					                    :class => "form-control remove-border"
					                  }
							      )
							    %>
				            </div>
				        </div>

				        <div class="form-group">
				            <div class="col-lg-10 col-lg-offset-2">
				                <button class="btn btn-default" >Cancel</button>
				                <button type="submit" class="btn btn-primary" id="btnNewElement">Submit</button>
				            </div>
				        </div>
				    </fieldset>
				</form>
    		</div>
    	</div>
    </div>	
</div>